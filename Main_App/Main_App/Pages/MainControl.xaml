<ui:Page x:Class="NavigationViewExample.Pages.MainControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NavigationViewExample.Pages"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="800"
      Title="Apps" Height="100" Loaded="Page_Loaded" >
    <Grid Height="100" >
        <Canvas Width="184" HorizontalAlignment="Center" Height="62" VerticalAlignment="Top" Margin="0,38,0,0" >
            <Button  Click="Button_Click" AutomationProperties.Name="Pie" Height="58" Width="58" Canvas.Left="63">
                <Image x:Name="ControlPS" x:FieldModifier="public" AutomationProperties.Name="Slice" Source="/photo/light/play.png" Stretch="Fill" Width="32" Height="32" />
            </Button>
            <Button  Click="Button_Click_old" AutomationProperties.Name="Pie" Height="58" Width="58">
                <Image   x:Name="ControlOld" x:FieldModifier="public" AutomationProperties.Name="Slice" Source="/photo/light/old.png" Stretch="Fill" Width="32" Height="32" />
            </Button>
            <Button  Click="Button_Click_next" AutomationProperties.Name="Pie" Height="58" Width="58" Canvas.Left="126">
                <Image x:Name="ControlNext" x:FieldModifier="public" AutomationProperties.Name="Slice" Source="/photo/light/next.png"  Stretch="Fill" Width="32" Height="32" />
            </Button>
        </Canvas>
        <Image Stretch="Fill" Height="118" Width="138" Source="/photo/beta.png" HorizontalAlignment="Left" />
        <Button  Click="Button_Click_list_ing" AutomationProperties.Name="Pie" Height="58" Width="58" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <Image x:Name="ControlNext1" x:FieldModifier="public" AutomationProperties.Name="Slice" Source="/photo/light/next.png"  Stretch="Fill" Width="32" Height="32" />
        </Button>
        <Slider x:Name="SD_1" Minimum="0" Maximum="10000" ValueChanged="SD_1_ValueChanged" Height="30" VerticalAlignment="Top" Margin="10,-2,10,0"/>
        <TextBox x:Name="T6" HorizontalAlignment="Left" Margin="0,27,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>
</ui:Page>
